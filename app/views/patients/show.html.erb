<div class="page-content">
  <div class="row">
    <div class="col-sm-12">
      <div class="card">
        <div class="card-header">
          <div class="row">
            <%name = @patient.first_name + " " + @patient.last_name%>
            <div class="col-md-8 d-flex justify-content-start">
              <%= name%>
            </div>

            <div class="col-md-4 d-flex justify-content-end">
              Appointments
            </div>
          </div>
        </div>

        <div class="card-body ">
          <div class="row">
            <div class="col-md-4 doc-profile">
              <div class="card">
                <div class="" style="text-align: center;   background-color: whitesmoke;">
                  <%= image_tag(@patient.image, class: "show-page-card-image") %>

                </div>
                <hr style = "margin-top: 0px">
                <div class="card-body">
                  <h5 class="card-title"><%= name%></h5>
                  <p class="text-muted mb-0"><i class="fa-solid fa-mobile-retro"></i> <%=@patient.phone%></p>
                  <p class="text-muted mb-0"><i class="fa-solid fa-square-envelope"></i> <%=@patient.email%></p>
                </div>
              </div>
            </div>

            <div class="col-md-8 doc-availability">
              <div class="card booking-schedule schedule-widget">
                <div class="schedule-header">
                  <div class="row">
                    <div class="col-md-12">
                      <%= week_calendar(number_of_weeks: 4, events: @appointments) do |date, appointments| %>
                        <div class="day">
                          <%= date %>
                        </div>
                        <% appointments.each do |appointment|%>
                          <div class="card-header">
                            <div class="card-title">
                              <%= appointment.title%>
                            </div>
                          </div>
                        <%end%>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
