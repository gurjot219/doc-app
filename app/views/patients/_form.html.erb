<div class="page-content">
  <div class="row">
    <div class="col-md-4 patient-image">
      <img src="https://img.freepik.com/free-vector/doctor-character-background_1270-84.jpg?size=338&ext=jpg&ga=GA1.2.1491718101.1666749255" class="d-block mx-lg-auto img-fluid" alt="Bootstrap Themes" width="700" loading="lazy", style = "height: 100%; border-radius: 1%">
    </div>

    <div class="col-md-8 patient-form">
      <div class="patient-page-content patient-new ">
        <div class="card">
          <h5 class="card-header">Patients</h5>
          <div class="card-body">

            <%= form_with(model: @patient) do |form| %>
              <div class="row g-3">

                <div class="col-md-6">
                  <%= form.label :first_name, class: "form-label" %>
                  <%= form.text_field :first_name, class: "form-control #{'red-border' if get_errors(:first_name, @patient)[0]}"  %>
                  <% if get_errors(:first_name, @patient)[0] %>
                    <p class = "error_message">
                      <i class="fa-solid fa-triangle-exclamation error_icon"></i><%=get_errors(:first_name, @patient)[1]%>
                    </p>
                  <%end%>
                </div>

                <div class="col-md-6">
                  <%= form.label :last_name, class: "form-label" %>
                  <%= form.text_field :last_name, class: "form-control #{'red-border' if get_errors(:last_name, @patient)[0]}" %>
                  <% if get_errors(:last_name, @patient)[0] %>
                    <p class = "error_message">
                      <i class="fa-solid fa-triangle-exclamation error_icon"></i><%=get_errors(:last_name, @patient)[1]%>
                    </p>
                  <%end%>
                </div>

                <div class="col-md-6">
                  <%= form.label :email, class: "form-label #{'red-border' if get_errors(:email, @patient)[0]}" %>
                  <%= form.email_field :email, class: "form-control" %>
                  <% if get_errors(:email, @patient)[0] %>
                    <p class = "error_message">
                      <i class="fa-solid fa-triangle-exclamation error_icon"></i><%=get_errors(:email, @patient)[1]%>
                    </p>
                  <%end%>
                </div>

                <div class="col-md-6">
                  <%= form.label :password, class: "form-label #{'red-border' if get_errors(:password, @patient)[0]}" %>
                  <%= form.email_field :password, class: "form-control" %>
                  <% if get_errors(:password, @patient)[0] %>
                    <p class = "error_message">
                      <i class="fa-solid fa-triangle-exclamation error_icon"></i><%=get_errors(:password, @patient)[1]%>
                    </p>
                  <%end%>
                </div>

                <div class="col-md-6">
                  <%= form.label :image, class: "form-label" %>
                  <%= form.file_field :image, class: "form-control" %>
                </div>

                <div class="col-md-6">
                  <%= form.label :address, class: "form-label" %>
                  <%= form.text_field :address, class: "form-control" %>
                </div>

                <div class="col-md-6">
                  <%= form.label :phone, class: "form-label" %>
                  <%= form.text_field :phone, class: "form-control" %>
                </div>


                <div class="col-12 tab-end">
                  <button type="submit" class="btn btn-primary">Back</button>
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </div>

            <%end%>

          </div>
        </div>

      </div>
    </div>
  </div>
</div>
